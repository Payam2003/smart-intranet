{
	"functions": [
		{
			"source": "functions",
			"codebase": "default",
			"ignore": [
				"node_modules",
				".git",
				"firebase-debug.log",
				"firebase-debug.*.log",
				"*.local"
			],
			"predeploy": ["npm --prefix \"$RESOURCE_DIR\" run lint"]
		}
	],
	"hosting": {
		"public": "pwa/public",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		]
	},
	"emulators": {
		"firestore": {
			"port": 8080,
			"enabled": true
		},
		"auth": {
			"port": 9099
		},
		"functions": {
			"port": 5001
		},
		"hosting": {
			"port": 5100
		},
		"ui": {
			"enabled": true
		},
		"singleProjectMode": true
	}
}
